<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="usernamePane" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label fx:id="label_Username" text="Username">
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="textfield_Username" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets right="10.0" top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox fx:id="passwordPane" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label fx:id="label_Password" text="Password">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </Label>
            <PasswordField fx:id="passwordfield_Password" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets left="4.0" right="10.0" top="5.0" />
               </HBox.margin>
            </PasswordField>
         </children>
      </HBox>
      <HBox fx:id="buttonPane" prefHeight="50.0" prefWidth="300.0">
         <children>
            <Button fx:id="button_Login" mnemonicParsing="false" onAction="#onLoginClick" text="Login">
               <HBox.margin>
                  <Insets left="10.0" right="20.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="button_Cancel" alignment="CENTER_RIGHT" mnemonicParsing="false" onAction="#onCancelClick" text="Cancel">
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="label_Status">
         <padding>
            <Insets left="10.0" />
         </padding>
      </Label>
   </children>
</VBox>
